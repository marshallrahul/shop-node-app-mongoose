<%- include ('../includes/head.ejs') -%>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include ('../includes/navigation.ejs') -%>

    <main class="detail-page">
        <div class="prod">
            <img src="/<%= product.imageUrl %>" alt="<%= product.imageUrl %>" class="bg-image">
            <div class="prod__details">
                <div class="prod__title"><%= product.title %></div>
                <div class="prod__description"><%= product.description %></div>
                <div class="prod__price">$<%= product.price %></div>
                <%- include ('../includes/add-to-cart.ejs', {product: product}) -%>
            </div>
        </div>
    </main>
</body>
</html>